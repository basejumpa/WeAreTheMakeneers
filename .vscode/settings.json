{
    "workbench.colorTheme": "Visual Studio Light",

    "vsicons.presets.hideExplorerArrows": true,
    "vsicons.presets.foldersAllDefaultIcon": true,


    "files.exclude": {
        ".venv/": true,
        ".tools/": true,
        ".extensions/": true,
        ".user/": true,
        "**/__pycache__/": true,
        "**/*.pyc": true,
        "out/": true,
    },


    "gitPrefix.pattern": "(?:[a-zA-Z]+\\/)?((?:[a-zA-Z]+)(?:-[0-9]+)?)-?.+",
    "gitPrefix.replacement": "$1",


    "annotator.git.ignoreWhitespaceOnBlame": true,


    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "all",
    "editor.wordWrap": "bounded",


    "code-eol.newlineCharacter": "¬",
    "code-eol.returnCharacter" : "¤",
    "code-eol.crlfCharacter"   : "¤¬",


    "[restructuredtext]" : {
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 120,
        "editor.rulers": [
            80,
            {
            "column": 100,
            "color": "#eeff00"
            },
            {
            "column": 120,
            "color": "#ee0000"
            },
        ]
    },


    "rewrap.wrappingColumn": 100,
    "rewrap.autoWrap.enabled" : true,


    "[shellscript]" : {
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 120,
        "editor.rulers": [ 80, 100, 120 ]
    },

    "indentRainbow.ignoreErrorLanguages" : [
        "yaml"
    ],


    "pasteImage.encodePath": "none",
    "pasteImage.path": "${currentFileDir}/_figures",
    "pasteImage.prefix": ".. figure:: ",


    "esbonio.server.enabled"         : false,
    "esbonio.server.enableDevTools"  : true,
    "esbonio.sphinx.buildCommand"    : ["-W", "-c", "docs/", "docs/", "out/docs/esbonio"],
    "plantuml.jar": ".tools/plantuml.jar",
    "plantuml.lintDiagramNoName": false,
    "plantuml.jarArgs": [
        // "-config", "./../plantuml.config" // Commented out because it doesn't work. Aborted my tryings...
    ],
    "plantuml.server": "", // Make sure not communicate with internet!


    "markdown-pdf.plantumlServer": "",
}
